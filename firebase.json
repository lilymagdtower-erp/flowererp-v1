
{
  "functions": [
    {
      "source": ".",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        ".next"
      ],
      "runtime": "nodejs20",
      "predeploy": [
        "npm --prefix \"%RESOURCE_DIR%\" run build"
      ]
    }
  ],
  "hosting": {
    "source": ".next",
    "ignore": [
      "**/.*",
      "**/node_modules/**",
      "*.log"
    ],
    "rewrites": [
      {
        "source": "**",
        "function": "server"
      }
    ]
  }
}
