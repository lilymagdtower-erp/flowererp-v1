{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "lib",
    "noEmit": false,
    "target": "es2022"
  },
  "include": ["src/index.ts", "src/ai/**/*.ts"],
  "exclude": [
    "node_modules",
    "src/app",
    "src/components",
    "src/context",
    "src/hooks",
    "src/lib",
    ".next"
  ]
}
